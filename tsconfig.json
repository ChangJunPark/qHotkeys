{
    "compilerOptions": {
        "lib": ["es2022"],
        "module": "commonjs",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "outDir": "dist",
        
        "sourceMap": true,
        "declaration": true
    },
    "include": ["src/**/*"]
}